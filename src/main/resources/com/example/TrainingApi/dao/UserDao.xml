<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.TrainingApi.dao.UserDao">
    <select id="selectAll" resultType="com.example.TrainingApi.dto.UserDto">
        SELECT
            id
            ,staff_code
            ,last_name
            ,first_name
            ,last_name_romaji
            ,first_name_romaji
            ,staff_department
            ,project_type
            ,joined_year
            ,new_glad_flg
        FROM
            staffs
    </select>

    <select id="selectedId" resultType="com.example.TrainingApi.dto.UserDto">
        SELECT
            id
            ,staff_code
            ,last_name
            ,first_name
            ,last_name_romaji
            ,first_name_romaji
            ,staff_department
            ,project_type
            ,joined_year
            ,new_glad_flg
        FROM
            staffs
        WHERE
            id = #{id}
    </select>
    <insert id="insertUser">
        INSERT INTO staffs (
            staff_code
            ,last_name
            ,first_name
            ,last_name_romaji
            ,first_name_romaji
            ,staff_department
            ,project_type
            ,joined_year
            ,new_glad_flg
            ,created_by
            ,updated_by
            ,created_at
            ,updated_at
        ) VALUES (
            #{dto.staffCode}
            ,#{dto.lastName}
            ,#{dto.firstName}
            ,#{dto.lastNameRomaji}
            ,#{dto.firstNameRomaji}
            ,#{dto.staffDepartment}
            ,#{dto.projectType}
            ,#{dto.joinedYear}
            ,#{dto.newGladFlg}
            ,user
            ,user
            ,CURRENT_TIMESTAMP
            ,CURRENT_TIMESTAMP
        )
    </insert>
    <update id="updateUser">
        UPDATE staffs
        SET
             last_name=#{dto.lastName}
            ,last_name=#{dto.lastName}
            ,first_name=#{dto.firstName}
            ,last_name_romaji=#{dto.lastNameRomaji}
            ,first_name_romaji=#{dto.firstNameRomaji}
            ,staff_department=#{dto.staffDepartment}
            ,project_type=#{dto.projectType}
            ,joined_year=#{dto.joinedYear}
            ,new_glad_flg=#{dto.newGladFlg}
            ,updated_by=user
            ,updated_at=CURRENT_TIMESTAMP
        WHERE
            staff_code = #(dto.staffCode)
    </update>
    <delete id="deleteUser">
        DELETE
        FROM staffs
        WHERE
            staff_code = #{staffCode}
    </delete>
</mapper>